<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignParentStart="true"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wifiSwitch"
        android:text="@string/wifiSwitch"
        android:layout_below="@+id/spinner"
        android:layout_alignEnd="@+id/spinner" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bluetoothSwitch"
        android:text="@string/bluetoothSwitch"
        android:layout_below="@+id/wifiSwitch" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gpsSwitch"
        android:text="@string/gpsSwitch"
        android:layout_below="@id/bluetoothSwitch"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mobileSwitch"
        android:text="Mobile Data On/Off"
        android:layout_below="@id/gpsSwitch"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vibrationSwitch"
        android:text="@string/vibrationSwitch"
        android:layout_below="@id/mobileSwitch"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/volumeTextView"
        android:text="Volume: "
        android:layout_below="@id/mobileSwitch"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/volumeSeekBar"
        android:layout_below="@id/volumeTextView"
        android:max="100"/>

    <TextView
        android:id="@+id/starthaltTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/volumeSeekBar"
        android:text="Starthaltestelle: "/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/starthaltEditText"
        android:layout_below="@id/starthaltTextView"/>

    <TextView
        android:id="@+id/zielhaltTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/starthaltEditText"
        android:text="Zielhaltestelle: "/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/zielhaltEditText"
        android:layout_below="@id/zielhaltTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profilNameTextView"
        android:layout_below="@id/zielhaltEditText"
        android:text="Profilname: "/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profilNameEditText"
        android:layout_below="@id/profilNameTextView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createProfilButton"
        android:text="Create profil"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/profilNameEditText" />

</LinearLayout>