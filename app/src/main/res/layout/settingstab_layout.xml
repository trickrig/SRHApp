<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profilNameTextView"
        android:text="Profilname: "
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profilNameEditText"
        android:layout_toRightOf="@id/profilNameTextView"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profilNameEditText"
        android:id="@+id/wifiSpinner"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wifiSwitch"
        android:layout_below="@+id/wifiSpinner"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bluetoothSwitch"
        android:layout_below="@+id/wifiSwitch"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gpsSwitch"
        android:layout_below="@id/bluetoothSwitch"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mobileSwitch"
        android:layout_below="@id/gpsSwitch"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vibrationSwitch"
        android:layout_below="@id/mobileSwitch"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/volumeTextView"
        android:text="Volume: "
        android:layout_below="@id/vibrationSwitch"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/volumeSeekBar"
        android:layout_below="@id/volumeTextView"
        android:max="100"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/starthaltTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/volumeSeekBar"
        android:text="Starthaltestelle: "
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/zielhaltTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zielhaltestelle: "
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/starthaltEditText"
        android:layout_alignEnd="@+id/starthaltTextView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createProfilButton"
        android:text="Create profile"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newProfileButton"
        android:text="New Profile"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/createProfilButton" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zielhaltEditText"
        android:layout_below="@+id/starthaltEditText"
        android:layout_alignStart="@+id/newProfileButton"
        android:layout_alignEnd="@+id/volumeSeekBar" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/starthaltEditText"
        android:layout_alignTop="@+id/starthaltTextView"
        android:layout_alignEnd="@+id/volumeSeekBar"
        android:layout_toEndOf="@+id/createProfilButton" />

</RelativeLayout>