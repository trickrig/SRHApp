<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Profile"
        android:textSize="30dp"
        android:id="@+id/currentProfileTextView"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connected WiFi"
        android:textSize="30dp"
        android:id="@+id/connectedWifiTextView"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Haltestelle:"
        android:textSize="30dp"
        android:id="@+id/textHaltestelle"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp" />

    <GridLayout
        android:layout_width="351dp"
        android:layout_height="match_parent"
        android:rowCount="11"
        android:columnCount="4"
        android:id="@+id/abfahrtsGrid"
        android:layout_gravity="right" />

</LinearLayout>